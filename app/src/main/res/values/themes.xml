<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/customPrimary</item>
        <item name="colorPrimaryVariant">@color/customPrimaryVariant</item>
        <item name="colorOnPrimary">@color/customColorOnPrime</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/customSecondary</item>
        <item name="colorSecondaryVariant">@color/customSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorOnBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/customBackgroundColor</item>
<!--        <item name="windowNoTitle">true</item>-->
        <item name="fontFamily">sans-serif-light</item>
<!--        <item name="android:textStyle">bold</item>-->
        <item name="android:textSize">25sp</item>

        <item name="imageButtonStyle">@style/MyButtonProperties</item>
        <item name="editTextStyle">@style/MyEditTextProperties</item>
    </style>
</resources>